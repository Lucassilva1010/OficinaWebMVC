

@model OficinaWebMVC.Models.ListaVeiculos



@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Veiculo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Placa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Placa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodChassi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodChassi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>

        @if (Model.PorteMoto is not null)
        {

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PorteMoto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PorteMoto)
            </dd>
        }
        
        @if (Model.PorteCarro is not null)
        {

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PorteCarro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PorteCarro)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdVeiculo">Edit</a> |
