@using OficinaWebMVC.Enums;
@model OficinaWebMVC.Models.ListaVeiculos

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Veiculo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodChassi" class="control-label"></label>
                <input asp-for="CodChassi" class="form-control" />
                <span asp-validation-for="CodChassi" class="text-danger"></span>
            </div>
            @if (Model.ModeloCarro is not null)
            {
                <div class="form-group">
                    <label asp-for="ModeloCarro" class="control-label"></label>

                    <select asp-items="@Html.GetEnumSelectList<ModeloCarro>()" asp-for="ModeloCarro"></select>
                </div>
            }
            else
            {

                <div class="form-group">
                    <label asp-for="ModeloMoto" class="control-label"></label>

                    <select asp-items="@Html.GetEnumSelectList<ModeloMoto>()" asp-for="ModeloMoto"></select>
                </div>
            }
          
            <input type="hidden" asp-for="IdVeiculo" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
