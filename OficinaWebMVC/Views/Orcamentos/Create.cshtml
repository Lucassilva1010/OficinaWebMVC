@model OficinaWebMVC.Models.OrcamentoModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Orcamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                  
           
            <div class="form-group">
                <label asp-for="Responsavel" class="control-label"></label>
                <input asp-for="Responsavel" class="form-control" />
                <span asp-validation-for="Responsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CpfResponsavel" class="control-label"></label>
                <input asp-for="CpfResponsavel" class="form-control" />
                <span asp-validation-for="CpfResponsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" id="ClientSelect"
                        asp-items="@ViewBag.Clientes">
                        <option value="" selected>Selcione</option>
                    </select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdVeiculo" class="control-label"></label>
                <select asp-for="IdVeiculo" id="VeiculoSelect">
                    <option value="" selected>Selcione</option>
                </select>
                <span asp-validation-for="IdVeiculo" class="text-danger"></span>
            </div>
           
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <script>
        $(function() {
            $('#ClientSelect').on('change',function() {
                var ClientId = $(this).val();
                console.log(ClientId)// obtém o valor selecionado
                if (ClientId !== "") {
                    $.getJSON('/Veiculos/ObterPorIdCliente?ClientId=' + ClientId,function(data){
                        console.log(data);
                    });
                }
            });
        });


    </script>

    

}
