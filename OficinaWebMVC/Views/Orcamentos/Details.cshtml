@model OficinaWebMVC.Models.OrcamentoModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Orcamento</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Responsavel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Responsavel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CpfResponsavel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CpfResponsavel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusOrcamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusOrcamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrazoOrcamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrazoOrcamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>


    </dl>
</div>

<div>
    <h4>Serviços</h4>
    <hr />

    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Servicos.FirstOrDefault().Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Servicos.FirstOrDefault().Preco)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Servicos)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>




<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
